nossl * *;

group primary {
<%- @servers.sort.each do |server| -%>
	host <%= server %>;
<%- end -%>

<%- @source_paths.sort.each do |source_path| -%>
	include <%= source_path %>;
<%- end -%>

<%- @exclude.sort.each do |exclude_alias| -%>
	exclude <%= exclude_alias %>;
<%- end -%>

<%- if @auto -%>
	auto <%= @auto %>;
<%- end -%>

	key /etc/csync2/csync2_<%= @title %>.key;
}
